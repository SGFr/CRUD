<%- include('partials/_header'); -%>

    <div class="container">
        <div class="row">
            <!-- FORM -->
            <div class="col-md-5 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Editar Tarea</h5>
                        <form action="/update/<%= task._id %>" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Inserta un título" class="form-control" value="<%= task.title %>">
                            </div>
                            <div class="form-group">
                                <textarea name="description" cols="80" placeholder="Inserta una descripción" class="form-control"><%= task.description %></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer'); -%>